<h2 class='text-center'>My Account</h2>

<% if current_user.profile_photo %>
  <img src="<%= current_user.profile_photo %>" height=300 width=300 />
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :profile_photo, "Profile Photo", class: 'input-group-label' %>
      <%= f.file_field :profile_photo %>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :username, 'Username', class: 'input-group-label' %>
      <%= f.text_field :username, autofocus: true %>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :email, 'Email', class: 'input-group-label' %>
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :password, 'Password', class: 'input-group-label' %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>

        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :password_confirmation, 'Password Confirmation', class: 'input-group-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :current_password, 'Current Password', class: 'input-group-label' %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'button' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to 'Go Back', books_path, data: { turbolinks: false }, class: 'button' %>
